<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Inventario</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href=" https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css " rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_Inventario_Manitos_Maravillosas.styles.css" asp-append-version="true" />
    <link href="~/css/radiostyle.css" rel="stylesheet" />
</head>
<body>
    <header class="topBarContainer bg-colorMainTrans">
        <div class="topBar d-flex px-3 align-items-center">
            <a id="mainIcon" class="fs-6" href="/" aria-label="Inicio - Sistema de Inventario">
                <img id="myIcon" class="px-1" src="~/img/manitos.svg" alt="Logo">
                Manitos Maravillosas
            </a>
        </div>
    </header>


    <div class="page d-flex flex-row bg-grayContrast">

        <aside class="sideBar bg-white" role="complementary" aria-label="Navegación principal">
            <span class="visually-hidden">Barra lateral de navegación</span>

            <ul class="d-flex flex-column gap-2 px-0 py-2" role="navigation">

                <!---Facturacion-->
                <li class="inline-nav-item">
                    <a class="d-flex justify-content-between align-items-center aside-link " href="#">
                        <div>
                            <i class="bi bi-calculator-fill "></i>
                            Facturación
                        </div>
                        <i class="bi bi-caret-down-fill arrowCollapse"></i>
                    </a>

                    <!---SubMenu Items-->
                    <ul class="subMenuCollapse" role="navigation">
                        <li class="subMenuNavItem">
                            <a class="aside-linkSubItem" asp-area="Facturation" asp-controller="Facturation" asp-action="Index">Caja</a>
                        </li>
                        <li class="subMenuNavItem">
                            @Html.ActionLink("Proformas", "Index", "Home", new { area = "" }, new { @class = "aside-linkSubItem" })
                        </li>
                    </ul>
                </li>

                <!---Descuentos-->
                <li class="inline-nav-item">
                    <a class="d-flex justify-content-between align-items-center aside-link " href="#">
                        <div>
                            <i class="bi bi-percent"></i>
                            Descuentos
                        </div>
                        <i class="bi bi-caret-down-fill arrowCollapse"></i>
                    </a>

                    <!---SubMenu Items-->
                    <ul class="subMenuCollapse" role="navigation">
                        <li class="subMenuNavItem">
                            @Html.ActionLink("Caja", "Index", "Home", new { area = "" }, new { @class = "aside-linkSubItem" })
                        </li>
                        <li class="subMenuNavItem">
                            @Html.ActionLink("Proformas", "Index", "Home", new { area = "" }, new { @class = "aside-linkSubItem" })
                        </li>
                    </ul>
                </li>


                <!---Inventario-->
                <li class="inline-nav-item">
                    <a class="d-flex justify-content-between align-items-center aside-link " href="#">
                        <div>
                            <i class="bi bi-box-fill"></i>
                            Inventario
                        </div>
                        <i class="bi bi-caret-down-fill arrowCollapse"></i>
                    </a>

                    <!---SubMenu Items-->
                    <ul class="subMenuCollapse" role="navigation">
                        <!-- Submenu items here -->
                    </ul>
                </li>


                <!---Proveedores-->
                <li class="inline-nav-item">
                    <a class="d-flex justify-content-between align-items-center aside-link " href="#">
                        <div>
                            <i class="bi bi-archive-fill"></i>
                            Proveedores
                        </div>
                        <i class="bi bi-caret-down-fill arrowCollapse"></i>
                    </a>

                    <!---SubMenu Items-->
                    <ul class="subMenuCollapse" role="navigation">
                        <!-- Submenu items here -->
                    </ul>
                </li>


                <!---Administración-->
                <li class="inline-nav-item">
                    <a class="d-flex justify-content-between align-items-center aside-link " href="">
                        <div>
                            <i class="bi bi-briefcase-fill"></i>
                            Administración
                        </div>
                        <i class="bi bi-caret-down-fill arrowCollapse"></i> <!-- Add if dropdown needed -->
                    </a>
                    <!-- Optional Submenu Items -->
                    <ul class="subMenuCollapse" role="navigation">
                        <li class="subMenuNavItem">
                            <a class="aside-linkSubItem" asp-area="Admin" asp-controller="Client" asp-action="Client">Cliente</a>
                        </li>
                        
                    </ul>
                     
                </li>

                <!---Reportes-->
                <li class="inline-nav-item">
                    <a class="d-flex justify-content-between align-items-center aside-link " href="/Admin/BuscarInstalacion">
                        <div>
                            <i class="bi bi-clipboard-data-fill"></i>
                            Reportes
                        </div>
                        <i class="bi bi-caret-down-fill arrowCollapse"></i> <!-- Add if dropdown needed -->
                    </a>
                    <!-- Optional Submenu Items -->
                </li>



            </ul>
        </aside>

        <div class="container-fluid px-4 pt-2 content-page w-100">
            <main role="main" class="pb-3 container">
                <!-- Contenido principal de la página -->
                @RenderBody()




            </main>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yEx1q6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="@Url.Content("https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js")"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" 
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    <script src="~/js/site.js"></script>
    <script src="~/js/sidebarscript.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
