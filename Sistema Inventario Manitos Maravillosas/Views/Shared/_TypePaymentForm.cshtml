@model Sistema_Inventario_Manitos_Maravillosas.Areas.Admin.Models.TypePayment
@{
    var action = ViewData["Action"] as string;
}

<div class="card">
    <div class="card-body">
        <button type="button" class="btn btn-custom" onclick="location.href='@Url.Action("Index", "TypePayment", new { area = "Admin" })'">
            <span> <i class="bi bi-arrow-left-short"></i></span>
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body">

        <form id="typePaymentForm" asp-controller="TypePayment" asp-action="@(action == "Edit" ? "Edit" : "Create")" method="post">
            @Html.AntiForgeryToken()
            <!-- Fila 1: Nombre, Descripcion Moneda -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    @if (action == "Edit")
                    {
                        <input type="text" class="form-control" asp-for="Name" aria-label="Identificación" disabled>
                        <input type="hidden" asp-for="Name">
                    }
                    else
                    {
                        <input type="text" class="form-control" asp-for="Name" aria-label="Identificación">
                    }

                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CoinDescription" class="control-label mb-2">Negocio</label>
                    <div class="select-wrapper">
                        <select asp-for="CoinDescription" class="form-control" asp-items="ViewBag.CoinDescriptions">
                            <option value="">Seleccione una moneda</option>
                        </select>
                    </div>
                    <span asp-validation-for="CoinDescription" class="text-danger"></span>
                </div>
            </div>

            <!-- Botón de envío y volver -->
            <div class="d-flex justify-content-end mb-3">
                <button type="submit" class="btn btn-primary">
                    @if (action == "Edit")
                    {
                        <span>Modificar <i class="bi bi-pencil-square"></i></span>
                    }
                    else
                    {
                        <span>Agregar <i class="bi bi-plus-circle"></i></span>
                    }
                </button>

            </div>
        </form>

    </div>
</div>
