@model Sistema_Inventario_Manitos_Maravillosas.Areas.Inventory.Models.ProductCategory

@{
    ViewData["Title"] = "Crear Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Action"] = "Create";
}
<section class="container px-5 py-3">
    <h3 style="margin-bottom: 2rem;">Agregar Categoría</h3>

    <partial name="_ProductCategoryForm" model="Model" view-data="ViewData">

    </partial>
</section>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (ViewData["Success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: "Perfecto!",
                    text: "@ViewData["Success"]",
                    icon: "success"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Inventory/ProductCategory/Index';
                    }
                });
            });
        </script>
    }

    @if (ViewData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Error',
                    text: '@ViewData["ErrorMessage"]',
                    icon: 'error'
                });
            });
        </script>

        ViewData["ErrorMessage"] = null;
    }
}
