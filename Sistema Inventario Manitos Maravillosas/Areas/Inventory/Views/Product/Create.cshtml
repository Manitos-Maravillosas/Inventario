@model Sistema_Inventario_Manitos_Maravillosas.Areas.Inventory.Models.Product

@{
    ViewData["Title"] = "Agregar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Action"] = "Create";
    ViewData["Controller"] = "Product";
}
<section class="container px-5 py-3">
    <h3 style="margin-bottom: 2rem;">Agregar Producto</h3>

    <partial name="_ProductForm" model="Model" view-data="ViewData">

    </partial>
</section>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (ViewData["Success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: "Perfecto!",
                    text: "@ViewData["Success"]",
                    icon: "success"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Inventory/Product';
                    }
                });
            });
        </script>
    }

    @if (ViewData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Error',
                    text: '@ViewData["ErrorMessage"]',
                    icon: 'error'
                });
            });
        </script>

        ViewData["ErrorMessage"] = null;
    }
    <script>
        // assign default value of 0 to inputs with id="Stock" id="Cost" and id="Price"
        document.getElementById("Stock").defaultValue = 0;
        document.getElementById("Cost").defaultValue = 0;
        document.getElementById("Price").defaultValue = 0;
    </script>
}
