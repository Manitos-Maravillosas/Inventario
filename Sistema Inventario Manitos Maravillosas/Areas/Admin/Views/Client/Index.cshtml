@model IEnumerable<Sistema_Inventario_Manitos_Maravillosas.Areas.Admin.Models.Client>

@{
    ViewData["Title"] = "Clientes";
}

<section class="container px-5 py-3">

    <h3 style="margin-bottom: 2rem;">Clientes</h3>

    <div class="card mb-2">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">

                <div class="input-group search-input">
                    <input id="searchInput" type="text" class="form-control" placeholder="Buscar...">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                </div>

                <div class="d-flex align-items-center ms-auto">
                    <label class="me-2">Filtrar Por:</label>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle custom-dropdown-button" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            Filtro
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="0">Identificación</a></li>
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="1">Nombre</a></li>
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="2">Apellido 1</a></li>
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="3">Apellido 2</a></li>
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="4">Correo</a></li>
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="5">Número de Contacto</a></li>
                            <li><a class="dropdown-item custom-dropdown-item" href="#" data-column="-1">Todas</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="card mb-2">
        <div class="card-body">
            <table id="clients" class="table" style="margin-top: 1rem;" aria-label="Tabla de solicitudes de los solicitantes">
                <thead>
                    <tr>
                        <th scope="col">Identificación</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido 1</th>
                        <th scope="col">Apellido 2</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Número de Contacto</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Id</td>
                                <td>@client.Name</td>
                                <td>@client.LastName1</td>
                                <td>@client.LastName2</td>
                                <td>@client.Email</td>
                                <td>@client.PhoneNumber</td>
                                <td>
                                    
                                    <form asp-action="Edit" method="get" style="display: inline;">
                                        <input type="hidden" name="id" value="@client.Id" />
                                        <button type="submit" class="icon-button bi bi-pencil-square" aria-label="Modificar" style="cursor: pointer;"></button>
                                    </form>
                                    <form id="deleteForm" asp-action="Delete" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@client.Id" />
                                        
                                    </form>
                                    <button onclick="confirmDelete('@client.Id', '@client.Name')" class="icon-button bi bi-trash-fill" aria-label="Eliminar" style="cursor: pointer;"></button>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No hay clientes registrados</td>
                        </tr>
                    }
                </tbody>

            </table>

            <a class="btn btn-primary px-5 py-1 mt-2"asp-action="Create">
                    Agregar <i class="bi bi-plus-circle"></i>
                </a>

        </div>
    </div>
</section>
@section Scripts {
    <script src="@Url.Content("~/js/admin/client.js")"></script>
    <script>
        function confirmDelete(clientId, clientName) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Estás a punto de eliminar al usuario " + clientName + ". No podrás revertir esta acción.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // execute the subimt event on the form with the id deleteForm
                        var form = document.getElementById("deleteForm");
                        form.submit();
                }
            });
        }
    </script>

    @if (ViewData["Success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: "Perfecto!",
                    text: "@ViewData["Success"]",
                    icon: "success"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Admin/Client/Index'; // Replace with your desired URL
                    }
                });
            });
        </script>

        ViewData["Success"] = null;
    }

    @if (ViewData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Error',
                    text: '@ViewData["ErrorMessage"]',
                    icon: 'error'
                });
            });
        </script>

        ViewData["ErrorMessage"] = null;
    }


}