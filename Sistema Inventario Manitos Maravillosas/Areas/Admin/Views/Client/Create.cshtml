@model Sistema_Inventario_Manitos_Maravillosas.Areas.Admin.Models.Client

@{
    ViewData["Title"] = "Crear Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Action"] = "Create";
    ViewData["Controller"] = "Client";
}
<section class="container px-5 py-3">
    <div class="d-flex justify-content-between mb-2 align-items-center">
        <h3 class="m-0">Agregar Cliente</h3>
        <a class="fs-1 px-1" asp-area="Admin" asp-controller="Client" asp-action="Index">
            <i class="bi bi-arrow-left-short"></i>
        </a>
    </div>


