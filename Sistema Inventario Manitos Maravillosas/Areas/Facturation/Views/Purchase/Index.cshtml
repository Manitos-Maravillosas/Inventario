                            </div>
                        </div>
                    </div>
                    *@

                </div> 
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @* <script src="~/js/facturation/facturation.js"></script> *@
    <script type="module" src="~/js/facturation/clientScript.js"></script>
