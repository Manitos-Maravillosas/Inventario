    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Error',
                    text: '@TempData["ErrorMessage"]',
                    icon: 'error'
                });
            });
        </script>

        TempData["ErrorMessage"] = null;
    }
}
